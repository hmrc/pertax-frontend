<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%green(%date{ISO8601}) %highlight(%-5level) %gray(message=[%yellow(%message)]) %gray(logger=[%logger] thread=[%thread] rid=[%X{X-Request-ID}] user=[%X{Authorization}]) %replace(exception=[%xException]){'^exception=\[\]$',''}%n</pattern>
        </encoder>
    </appender>

    <logger name="uk.gov" level="WARN" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="application" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>


    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="controllers.auth.SessionAuditor" level="${logger.auth:-INFO}"/>

</configuration>
